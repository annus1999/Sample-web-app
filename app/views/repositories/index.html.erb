<h1>Repositories</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Users</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @repositories.each do |repository| %>
      <tr>
        <td><%= repository.name %></td>
        <td>
          <% repository.users.each do |user| %>
            <%= user.email %><br>
          <% end %>
        </td>
        <td><%= link_to 'Show', repository %></td>
        <td><%= link_to 'Edit', edit_repository_path(repository) %></td>
        <td><%= link_to 'Destroy', repository, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Repository', new_repository_path %>
